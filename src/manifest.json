{
  "manifest_version": 2,
  "name": "MoSo-in-Firefox",
  "version": "1.0",

  "applications": {
    "gecko": {
      "id": "moso@mozilla.com",
      "strict_min_version": "71.0",
      "update_url": "https://fpn.firefox.com/downloads/browser/updates.json"
    }
  },

  "description": "A proof of concept to run MoSo into the browser",

  "icons": {
    "48": "icons/logo.svg",
    "96": "icons/logo.svg"
  },

  "incognito": "spanning",

  "background": {
    "page": "background/page.html"
  },

  "browser_action": {
    "default_area": "navbar",
    "default_icon": "icons/logo.svg",
    "default_title": "MoSo",
    "default_popup": "popup/main.html"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentscripts/microformat-shiv.min.js",
        "contentscripts/main.js"
      ],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "<all_urls>",
    "identity",
    "menus",
    "storage",
    "tabs"
  ]
}
